<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideTop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideBottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.93" />

            <TextView
                android:id="@+id/textView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_cupones"
                android:textColor="@color/bb_white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toTopOf="@+id/guideTop"
                tools:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_cupones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/guideRight"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/textView_home"
                tools:listitem="@layout/item_generic" />

            <TextView
                android:id="@+id/textView_shops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/home_shops"
                android:textColor="@color/bb_white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/recycler_cupones"
                tools:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_shops"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/guideRight"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/textView_shops"
                tools:listitem="@layout/item_generic" />

            <TextView
                android:id="@+id/textView_restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/home_restaurants"
                android:textColor="@color/bb_white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/recycler_shops"
                tools:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_restaurants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/guideRight"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/textView_restaurants"
                tools:listitem="@layout/item_generic" />

            <TextView
                android:id="@+id/textView_cars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/home_cars"
                android:textColor="@color/bb_white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/recycler_restaurants"
                tools:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageViewCars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/textView_cars"
                app:srcCompat="@drawable/rent_car_banner" />

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/home_info"
                android:textColor="@color/bb_white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCars"
                tools:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="@+id/guideBottom"
                app:layout_constraintEnd_toEndOf="@+id/guideRight"
                app:layout_constraintStart_toStartOf="@+id/guideLeft"
                app:layout_constraintTop_toBottomOf="@+id/textView_info"
                tools:listitem="@layout/item_generic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>